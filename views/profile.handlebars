<h1>Profile</h1>

<div class="mb-3">
    <form id="post-form">
        <label for="exampleFormControlInput1" class="form-label">Post Title</label>
        <input type="text" class="form-control updateTitle" id="postTitle" placeholder=''>
</div>
<div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label"></label>
    <textarea class="form-control updateBody" id="postInput" rows="3"></textarea>
    <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>

{{#each user as |user| }}
<div class="postDiv">
    <h2>{{user.post_title}}</h2>
    <p data-body="postBody">{{user.post_body}}</p>
    {{#if user.isEditable }}
    <div>
        <button class="btn btn-primary editBtn" data-bs-toggle="modal" data-bs-target="#exampleModal"
            data-postTitle="{{user.post_title}}" data-postBody={{user.post_body}} data-userId="{{user.id}}">Edit
            {{userId}}</button>
        <button class="btn btn-danger deleteBtn" data-userId="{{user.id}}">Delete </button>
    </div>


    {{/if}}
</div>

{{/each}}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input class="updatePostTitle">
                <input class="updatePostBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary save-changes">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
